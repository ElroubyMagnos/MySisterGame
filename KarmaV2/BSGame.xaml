<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KarmaV2.BSGame"
             Title="BSGame">
    <ScrollView>
        <VerticalStackLayout HorizontalOptions="Center">
            <Image x:Name="First" WidthRequest="250" HeightRequest="250"/>
            <Image x:Name="Second" WidthRequest="250" HeightRequest="250"/>

            <HorizontalStackLayout>
                <Entry x:Name="Space" WidthRequest="250" Text="" Placeholder="Number"/>
                <Button x:Name="Next" Clicked="Next_Clicked" Text="Enter"/>
            </HorizontalStackLayout>
           
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>